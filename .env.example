# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management

BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Set to True to use Binance testnet (recommended for testing)
USE_TESTNET=False

# Telegram notifications (optional)
# Get token from @BotFather, chat ID from @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# AI Chat Assistant (optional - enable full AI features)
# Get Anthropic key from: https://console.anthropic.com/
# Get OpenAI key from: https://platform.openai.com/api-keys
# Set ONE of these to enable AI chat:
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here
